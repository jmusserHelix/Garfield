# Setup a minimal environment to build and run the examples

setenv GARFIELD_INSTALL @CMAKE_INSTALL_PREFIX@
setenv CMAKE_PREFIX_PATH @CMAKE_INSTALL_PREFIX@:${CMAKE_PREFIX_PATH}
setenv HEED_DATABASE ${GARFIELD_INSTALL}/@CMAKE_INSTALL_DATAROOTDIR@/Heed/database
setenv LD_LIBRARY_PATH ${GARFIELD_INSTALL}/@CMAKE_INSTALL_LIBDIR@:${LD_LIBRARY_PATH}
setenv PYTHONPATH ${GARFIELD_INSTALL}/@CMAKE_INSTALL_LIBDIR@/python@Python_VERSION_MAJOR@.@Python_VERSION_MINOR@/site-packages/:${PYTHONPATH}
