# Setup a minimal environment to build and run the examples

export GARFIELD_INSTALL=@CMAKE_INSTALL_PREFIX@
export CMAKE_PREFIX_PATH=@CMAKE_INSTALL_PREFIX@:$CMAKE_PREFIX_PATH
export HEED_DATABASE=$GARFIELD_INSTALL/@CMAKE_INSTALL_DATAROOTDIR@/Heed/database
export LD_LIBRARY_PATH=$GARFIELD_INSTALL/@CMAKE_INSTALL_LIBDIR@:$LD_LIBRARY_PATH
export PYTHONPATH=$GARFIELD_INSTALL/@CMAKE_INSTALL_LIBDIR@/python@Python_VERSION_MAJOR@.@Python_VERSION_MINOR@/site-packages/:$PYTHONPATH
